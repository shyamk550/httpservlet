<#-- Parses a date string and returns MM/dd/yyyy; returns "" if blank.
     Defaults to input format dd-MMM-yyyy (e.g., 28-Feb-2022). -->
<#function fmtDate s inFmt="dd-MMM-yyyy" outFmt="MM/dd/yyyy">
  <#if !s?? || !s?has_content>
    <#return "">
  </#if>
  <#attempt>
    <#return s?date(inFmt)?string(outFmt)>
  <#recover>
    <#-- If parsing ever fails, just return the original string -->
    <#return s>
  </#recover>
</#function>
